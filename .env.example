# BUJA Core Platform - Backend Environment Variables
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env to version control!

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/buja_core
REDIS_URL=redis://localhost:6379/0
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ============================================
# Vector Database
# ============================================
PINECONE_API_KEY=pk-your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=buja-knowledge

# ============================================
# LLM Providers
# ============================================
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Local LLM (Ollama) - configured in agents.yaml
# OLLAMA_ENDPOINT=http://localhost:11434

# ============================================
# Authentication & Security
# ============================================
# JWT Configuration
JWT_SECRET_KEY=your-random-256-bit-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Ed25519 Job Signing Keys
# Generate with: python -c "from cryptography.hazmat.primitives.asymmetric import ed25519; ..."
JOB_SIGNING_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
MC4CAQAwBQYDK2VwBCIEIFg3...
-----END PRIVATE KEY-----

JOB_SIGNING_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
MCowBQYDK2VwAyEAXDe4B9...
-----END PUBLIC KEY-----

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://api.bujacore.com/api/v1/telegram/webhook

# ============================================
# Application Configuration
# ============================================
APP_NAME=BUJA Core Platform
APP_VERSION=1.0.0
ENVIRONMENT=development  # development | staging | production
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# ============================================
# Rate Limiting & Quotas
# ============================================
DEFAULT_MONTHLY_QUOTA_USD=100.0
RATE_LIMIT_PER_TENANT_PER_MINUTE=100
RATE_LIMIT_PER_USER_PER_SECOND=10

# ============================================
# Job Queue Configuration
# ============================================
MAX_QUEUED_JOBS_PER_TENANT=50
JOB_DEFAULT_TIMEOUT_SEC=600
JOB_MAX_TIMEOUT_SEC=3600

# ============================================
# Worker Management
# ============================================
WORKER_HEARTBEAT_TIMEOUT_SEC=120
WORKER_MAX_REASSIGN_COUNT=2

# ============================================
# Monitoring & Observability
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,https://app.bujacore.com
CORS_ALLOW_CREDENTIALS=true

# ============================================
# File System Safety
# ============================================
MAX_FILE_SIZE_BYTES=1048576      # 1 MB
MAX_TOTAL_JOB_SIZE_BYTES=10485760  # 10 MB
